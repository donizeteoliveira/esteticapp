<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_funcionario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.donizete.android.esteticapp.activities.FuncionarioActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/imageView2"
            android:src="@drawable/estetica" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Virtual Estetic"
                android:id="@+id/textView2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:weightSum="1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/pesquisaFunc"
                    android:layout_weight="1"
                    android:hint="Pesquisa Nome" />

                <ImageButton
                    android:layout_width="44dp"
                    android:layout_height="39dp"
                    android:id="@+id/imgBtnFindFunc"
                    android:layout_gravity="right"
                    android:src="@android:drawable/ic_search_category_default" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_weight="0.23">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="310dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtNome"
                android:layout_weight="0.40"
                android:hint="Nome" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtDtAdmissao"
                android:layout_weight="0.40"
                android:hint="Data Admissao" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtCpf"
                android:layout_weight="0.40"
                android:hint="CPF" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtRg"
                android:layout_weight="0.40"
                android:hint="RG" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtEmail"
                android:layout_weight="0.40"
                android:hint="Email" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtTelefone"
                android:layout_weight="0.40"
                android:hint="Telefone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Salvar"
                android:layout_height="wrap_content"
                android:id="@+id/btnSalvar"
                android:layout_weight="0.43"
                android:layout_width="120sp" />

            <Button
                android:text="Pedido"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:id="@+id/btnPedido" />

            <Button
                android:text="Sair"
                android:layout_height="wrap_content"
                android:id="@+id/btnSair"
                android:layout_weight="1"
                android:layout_width="120sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
